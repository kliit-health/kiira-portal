{
	"emulators": {
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		},
		"hosting": {
			"port": 5000
		},
		"ui": {
			"enabled": true
		}
	},
	"firestore": {
		"rules": "firestore.rules"
	},
	"functions": {
		"source": ".",
		"ignore": [
			"firebase.json",
			"firbease-debug.log",
			"**/.*",
			"**/node_modules/**",
			"components/**",
			"helpers/**",
			"pages/**",
			"public/**",
			"firestore.rules",
			"readme.md",
			"src/components/**",
			"src/config/**",
			"src/constants/**",
			"src/firebase/**",
			"src/helpers/**",
			"src/HOCs/**",
			"src/i18n/**",
			"src/pages/**",
			"src/redux/**",
			"src/styles/**",
			"src/theme/**"
		]
	},
	"hosting": [
		{
			"site": "kliit-health-dev",
			"public": "public/",
			"cleanUrls": true,
			"rewrites": [
				{
					"source": "**",
					"function": "nextjs-server"
				}
			]
		}
	]
}
